<div id="addProjectModal" class="modal">
	<div class="modal-content">

		<div class="modal-header">
			<h3>Add Project</h3>
			<button type="button" class="btn-close" data-close="true"></button>
		</div>
		<div class="modal-icon">
			<img src="/images/project-logo.svg" alt="Alternate Text" />
		</div>
		<form novalidate method="post" asp-action="addProject" asp-controller="projects">

			<div class="form-group mb-3">
				<label class="form-label">Project Name</label>
				<div class="field-group">
					<input class="form-control" placeholder="Project name"/>
					<span class = "text-danger"></span>
				</div>
			</div>

			<div class="form-group mb-3">
				<label class="form-label">Client Name</label>
				<div class="field-group">
					<input class="form-control" placeholder="Client name" />
					<span class="text-danger"></span>
				</div>
			</div>

			<div class="form-group mb-3">
				<label class="form-label">Description</label>
				<div class="field-group">
					<input class="form-control pb-5" placeholder="Description" />
					<span class="text-danger"></span>
				</div>
			</div>

			<div class="d-flex justify-content-between"> 
				<div class="form-group mb-3">
					<label class="form-label">Start Date</label>
					<div class="field-group datewidth">
						<input type="date" class="p-2 form-control" />
						<span class="text-danger"></span>
					</div>
				</div>

				<div class="form-group mb-3">
					<label class="form-label">End Date</label>
					<div class="field-group datewidth">
						<input type="date" class="p-2 form-control" />
						<span class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="form-group mb-3">
				<label class="form-label">Budget</label>
				<div class="field-group">
					<input class="form-control" placeholder="0" />
					<span class="text-danger"></span>
				</div>
			</div>

			<button type="submit" class="btn btn-blue">Create</button>
		</form>

	</div>

</div>