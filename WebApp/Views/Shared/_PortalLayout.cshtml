<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* Sätter titeln till det som sätts i vyn/controllern *@
    <title>@ViewData["Title"] - WebApp</title>
    <script type="importmap">
        @*         Importera script type module här *@
    </script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*     Nedan gör det möjligt att använda code behind css filer *@ 
   <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="portal">
        <div class="side">
			<a href="@Url.Content("~/")"> <img class="img" src="~/images/Logo.svg" alt=""> <span>alpha</span></a>
            <button class="menu-btn btn btn-blue"><img src="~/images/briefcase.svg">Projects</button>
        </div>

        <div class="top">
            <div>
                @await Html.PartialAsync("Partials/_UserInfoModal")
            </div>
            <div><button data-modal="true" data-target="#userInfoModal" data-toggle="modal"><i class="fa-solid fa-gear"></i></button></div>
            <div><img src="~/images/avatar.svg"></div>
        </div>


        <div class="main">

            <div>
                @await Html.PartialAsync("Partials/_AddProjectModal")
            </div>
           

            <header class="d-flex justify-content-between">
                <h2>Projects</h2>
                <button class="btn btn-blue" data-modal="true" data-target="#addProjectModal"><i class="fa-solid fa-plus"></i> Add Project</button>
            </header>

            <div class="status-menu">
                <button>ALL []</button>
                <button>STARTED []</button>
                <button>COMPLETED []</button>
            </div>

            @RenderBody()
        </div>
    </div>

@*     <script src="~/lib/jquery/dist/jquery.min.js"></script>
 *@    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

